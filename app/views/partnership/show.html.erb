<!--- Partnership selection -->
<div class="dropdown">
        <h6 class="h6"> Select partnership: </h6>   
        <%= select_tag 'selected_partnership', options_for_select(@partnerships, :selected=>@current_partnership), :onchange => "indexAjax()" %>
</div>


<!--- Jobs according to partnership and staff login-->
<table class="table table-hover table-striped col-md-12">
    <thead>
    <tr>
      <th>Jobs</th>
      <th>Status</th>
      <th>Description</th>
    </tr>
    </thead>
    <tbody>
    <% @jobs_to_show.each do |job| %>
      <tr>
        <td>
          <%= link_to  "#{job[:JobNumber]}", job_path("#{job[:JobNumber]}"), id: 'job_link' %>
        </td>
        <td>
          <%= job[:Status] %>
        </td>
        <td>
          <%= job[:JobDescription] %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<!--- jobs pages navigation if jobs>50 or so --->
<script>
  function indexAjax() {
      partnership = $("[name='selected_partnership']");
      p_name = partnership.val()
      loc = "/partnership/" + p_name;
      window.location = loc
  }
</script>
